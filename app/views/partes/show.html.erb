<h1>Detalles del parte</h1>

<table id="new">
	<tr>
		<td width="125px"><strong>Referencia:</strong></td>
		<td width="200px"><%=h @parte.created_at.to_date.strftime("%Y") + '.' + @parte.id.to_s %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Operario:</strong></td>
		<td width="200px"><%=h @parte.operario.nombre + ' ' + @parte.operario.apellidos %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Obra:</strong></td>
		<td width="200px"><%=h @parte.obra.nombre %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Ciudad:</strong></td>
		<td width="200px"><%=h @parte.obra.ciudad.nombre %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Distancia:</strong></td>
		<td width="200px"><%=h @parte.obra.ciudad.kilometraje %> km.</td>
	</tr>
	<tr>
		<td width="125px"><strong>Dieta:</strong></td>
		<td width="200px"><%=h @parte.obra.ciudad.dieta %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Fecha:</strong></td>
		<td width="200px"><%=h @parte.created_at.to_date.strftime("%d-%m-%y") %></td>
	</tr>
</table>

<h2>Horas trabajadas</h2>

<table id="new">
<% if !@parte.horas_base.nil? %>
	<tr>
		<td width="125px"><strong>Horas base:</strong></td>
		<td width="200px"><%=h @parte.horas_base %></td>
	</tr>
<% end %>
<% if !@parte.horas_extra.nil? %>
	<tr>
		<td width="125px"><strong>Horas extra:</strong></td>
		<td width="200px"><%=h @parte.horas_extra %></td>
	</tr>
<% end %>

<% if !@parte.horas_nocturna.nil? %>
	<tr>
		<td width="125px"><strong>Horas nocturna:</strong></td>
		<td width="200px"><%=h @parte.horas_nocturna %></td>
	</tr>
<% end %>

<% if !@parte.horas_festivo.nil? %>
	<tr>
		<td width="125px"><strong>Horas festivo:</strong></td>
		<td width="200px"><%=h @parte.horas_festivo %></td>
	</tr>
<% end %>
</table>
