<h1>Editing obra</h1>

<% form_for(@obra) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :direccion %><br />
    <%= f.text_field :direccion %>
  </p>
  <p>
    <%= f.label :ciudad %><br />
    <select name = "obra[ciudad_id]">
    <% @ciudades.each do |ciudad| %>
       <option value="<%= ciudad.id %>"
         <%= 'selected' if ciudad.id == @obra.ciudad_id %>>
         <%= ciudad.nombre %>
       </option>
   <% end %>
  </select>
  </p>
  <p>
    <%= f.submit 'Actualizar' %>
  </p>
<% end %>
<br />
<div id="acciones">
<%= link_to 'Mostrar', @obra %> |
<%= link_to 'Volver', obras_path %>
</div>