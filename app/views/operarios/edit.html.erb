<h1>Editando operario</h1>

<% form_for(@operario) do |f| %>
  <%= f.error_messages %>
<table id="new">
	<tr>
		<td width="125px"><strong><%= f.label :nombre %></strong></td>
		<td width="200px"><%= f.text_field :nombre %></td>
	</tr>
	<tr>
		<td width="125px"><strong><%= f.label :apellidos %></strong></td>
		<td width="200px"><%= f.text_field :apellidos %></td>
	</tr>
	<tr>
		<td width="125px"><strong><%= f.label :usuario %></strong></td>
		<td width="200px"><%= f.text_field :usuario %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Contraseña</strong></td>
		<td width="200px"><%= f.password_field :contrasena %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Teléfono</strong></td>
		<td width="200px"><%= f.text_field :telefono %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Correo-e</strong></td>
		<td width="200px"><%= f.text_field :email %></td>
	</tr>
</table>	

  <p>
    <%= f.submit 'Actualizar' %>
  </p>
<% end %>

<div id="acciones">
<%= link_to 'Mostrar', @operario %> |
<%= link_to 'Volver', operarios_path %>
</div>