<h1>Detalles de la obra</h1>
<table id="new">
	<tr>
		<td width="125px"><strong>Nombre:</strong></td>
		<td width="300px"><%=h @obra.nombre %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Direccion:</strong></td>
		<td width="300px"><%=h @obra.direccion %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Ciudad:</strong></td>
		<td width="300px"><%=h @obra.ciudad.nombre %></td>
	</tr>
	<tr>
		<td width="125px"><strong>Distancia:</strong></td>
		<td width="300px"><%=h @obra.ciudad.kilometraje %> km.</td>
	</tr>
	<tr>
		<td width="125px"><strong>Dieta:</strong></td>
		<td width="300px"><%=h @obra.ciudad.dieta %></td>
	</tr>
</table>

<h2>Partes realizados</h2>

<table id="index_report">
	<thead>
	<tr>
		<th width="125px">Referencia</th>
		<th width="200px">Operario</th>
		<th width="125px">Fecha</th>
	</tr>
	</thead>
	<tbody>
    <% @partes.each do |parte| %>
	<% if parte.obra.id == @obra.id %>
    <tr>
		<td><%= link_to (parte.created_at.to_date.strftime("%Y") + '.' + parte.id.to_s), :controller => "partes", :action => "show", :id => parte.id %></td>
		<td><%= link_to parte.operario.nombre + ' ' + parte.operario.apellidos, :controller => "operarios", :action => "show", :id => parte.operario.id %></td>
		<td><%=h parte.created_at.to_date.strftime("%d-%m-%y") %></td>
	</tr>
	<% end %>
  <% end %>
	</tbody>
</table>
<br />
<div id="acciones">
<%= link_to 'Editar', edit_obra_path(@obra) %> |
<%= link_to 'Volver', obras_path %> |
<%= link_to 'PDF', obra_path(@obra, :pdf) %>
</div>