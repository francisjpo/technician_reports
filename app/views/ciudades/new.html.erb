<h1>Nueva ciudad</h1>

<% form_for(@ciudad) do |f| %>
  <%= f.error_messages %>
<table id="new">
	<tr>
		<td width="125px"><strong><%= f.label :nombre %></strong></td>
		<td width="200px"><%= f.text_field :nombre %></td>
	</tr>
	<tr>
		<td width="125px"><strong><%= f.label :kilometraje %></strong></td>
		<td width="200px"><%= f.text_field :kilometraje, :size => '5%' %></td>
	</tr>
	<tr>
		<td width="125px"><strong><%= f.label :dieta %></strong></td>
		<td width="200px"><%= f.text_field :dieta, :size => '15%' %></td>
	</tr>
</table>

  <p>
    <%= f.submit 'Crear' %>
  </p>
<% end %>

<div id="acciones">
<%= link_to 'Volver', ciudades_path %>
</div>