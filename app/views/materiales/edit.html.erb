<h1>Editando material</h1>

<% form_for(@material) do |f| %>
  <%= f.error_messages %>
<table id="new">
	<tr>
		<td width="125px"><strong><%= f.label :nombre %></strong></td>
		<td width="200px"><%= f.text_field :nombre %></td>
	</tr>
	<tr>
		<td width="125px"><strong><%= f.label :referencia %></strong></td>
		<td width="200px"><%= f.text_field :referencia %></td>
	</tr>
</table>
  <p>
    <%= f.submit 'Actualizar' %>
  </p>
<% end %>
<br />
<div id="acciones">
<%= link_to 'Mostrar', @material %> |
<%= link_to 'Volver', materiales_path %>
</div>